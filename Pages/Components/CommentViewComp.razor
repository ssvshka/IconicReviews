<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudField Margin="Margin.Dense" Variant="Variant.Outlined">@Comment.User.Email @Comment.LeftOn.ToShortDateString()</MudField>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudField>@Comment.Text</MudField>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public Comment Comment { get; set; } = default!;
}
